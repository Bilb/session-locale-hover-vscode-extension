{
  "name": "session-locale-hover",
  "displayName": "Session Locale Hover",
  "description": "Hover over tr() tokens or { token: '...' } to see the English string from english.ts",
  "version": "0.0.5",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "bilb",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bilb/session-locale-hover-vscode-extension"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Session Locale Hover",
      "properties": {
        "sessionLocaleHover.englishTsPath": {
          "type": "string",
          "default": "",
          "description": "Path to english.ts relative to workspace root"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "pnpm compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  },
  "icon": "icon.png",
  "license": "MIT"
}
